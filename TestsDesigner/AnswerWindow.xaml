<Window x:Class="TestsDesigner.AnswerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestsDesigner"
        mc:Ignorable="d"
        Title="Add new answer" Height="207" Width="271">
    <Grid Background="AliceBlue">
        <StackPanel Margin="5,5,5,0">
            <Label Content="Answer:"/>
            <TextBox Name="AnswerTextBox" Height="70" Margin="3"/>
            <CheckBox Content="answer is true" Margin="5" Name="IsTrueChckBoc"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Save" Name="SaveBtn" Margin="5" Width="120" Background="LightSteelBlue" Click="SaveBtn_Click"/>
                <Button Content="Cancel" Name="CancelBtn" Margin="5" Width="120" Background="LightSteelBlue" Click="CancelBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
